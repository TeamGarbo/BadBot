<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="teamgarbo.github.com.badbotapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Court"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="307dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Badminton!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032" />

        <TextView
            android:id="@+id/txt_Player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PlayerName"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="277dp" />

        <Button
            android:id="@+id/btn_ScanQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan QR"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="54dp" />

        <Button
            android:id="@+id/btn_sendTestMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonClick"
            android:text="Button" />

        <Button
            android:id="@+id/btn_new_user_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New User Test"
            android:onClick="loadNewUser"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
